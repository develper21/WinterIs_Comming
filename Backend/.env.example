# =================================
# SEBN BACKEND ENVIRONMENT VARIABLES
# =================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017
DB_NAME=sebn_db

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration (IMPORTANT: Change these in production!)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=24h

# Rate Limiting Configuration
ENABLE_RATE_LIMIT=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Admin Configuration
ADMIN_EMAIL=admin@sebn.com
ADMIN_PASSWORD=admin123

# Blood Bank Default User
BLOOD_BANK_EMAIL=contact@citybloodbank.com
BLOOD_BANK_PASSWORD=bloodbank123

# Development Settings
DEBUG=true
LOG_LEVEL=info

# Security Settings
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_in_production

# File Upload Configuration (Optional)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# External API Keys (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token

# Monitoring & Analytics (Optional)
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_ga_id

# =================================
# NOTES:
# =================================
# 1. Copy this file to .env and update with your actual values
# 2. Never commit .env file to version control
# 3. Change all default secrets in production
# 4. Set NODE_ENV=production for production deployment
# 5. Configure proper CORS origin for your frontend domain